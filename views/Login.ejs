<%- include ("includes/header", {
   "title": "Login"
}) %>
<!-- Including the header component with a custom title "Login" -->

<div class="container" style="margin-top: 50px;">
    <!-- Creating a container div with a top margin of 50 pixels -->

    <%- include ("includes/ResponseAlert", {
        "request": request
    }) %>
    <!-- Including the ResponseAlert component within the container div -->

    <div class="row">
        <!-- Creating a row within the container div -->
        <div class="col-md-12">
            <!-- Creating a column that spans the full width on medium screens -->

           <!-- The form uses the POST method. This is a common HTTP method used to submit data to the server for processing. In a typical authentication scenario, the form data (email and password) would be sent to the server for validation. -->
            <form action="<%= request.mainURL %>/Login" method="POST">
                <!-- Creating a form element with an action attribute for the login endpoint and using the POST method -->
                <div class="form-group">
                    <label>Email</label>
                    <!-- Label for the email input field -->
                    <input type="email" placeholder="Enter email" name="email" class="form-control" required />
                    <!-- Email input field with placeholder, name attribute, and the "form-control" class for styling -->
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <!-- Label for the password input field -->
                    <input type="password" placeholder="Enter password" name="password" class="form-control" required />
                    <!-- Password input field with placeholder, name attribute, and the "form-control" class for styling -->
                </div>

                <input type="submit" value="Login" class="btn btn-primary" />
                <!-- Login button with the "btn" and "btn-primary" classes for styling -->
            </form>
        </div>
    </div>
</div>

<%- include ("includes/footer") %>
<!-- Including the footer component -->
